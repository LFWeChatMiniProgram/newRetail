/*
顶部导航条
*/
page{
  overflow: visible;
}
.nav{
  position: fixed;
  top: 0rpx;
  width: 750rpx;
  margin-top: -20rpx;
}
.scroll-view_H{
  background: #fff;
  height: 140rpx;
  margin: 0rpx;
  margin-top:20rpx; 
  padding: 0rpx;
  /* position: absolute; */
  z-index: 50;
  top: 0rpx;
  left: 0rpx;
  border-bottom: 1rpx solid #eee; 
  border-top: 1rpx solid #eee;
}
  /*
  隐藏ScrollView滚动条
  */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.scroll-view_Float{
  margin-top: 80rpx; 
  position: fixed;
}
.out{
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
  /* padding-bottom: 45rpx; */
  /* padding-top: 45rpx; */
}
.table-out{
  width: 100%;
  height: 100%;
  background: #fff; 
  white-space: nowrap; 
  display: flex;
  margin: 0rpx;
  /* align-items: flex-end; */
}
.table-name{
   display: flex; 
  /* display: inline-block; */
  align-items: center;
  /* width: 140rpx; */
  margin-left: 10rpx;
  padding: 20rpx 20rpx 14rpx 20rpx;
  box-sizing: border-box; 
  position: relative;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #313131;
  letter-spacing: 0;
  line-height: 30rpx;
}
.table-name.active{
  padding: 20rpx 20rpx 14rpx 20rpx;
  /* box-sizing: border-box; */
  font-family: PingFangSC-Semibold;
  font-size: 42rpx;
  color: #030303;
  letter-spacing: 0;
  line-height: 53rpx;
  position: relative;
  z-index: 10;
  font-weight: bold;
}
