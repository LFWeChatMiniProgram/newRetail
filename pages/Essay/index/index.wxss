.table-cell{
  position: relative;
  display: flex;
  align-items: flex-end;
  padding-bottom: 40rpx;
}
.table-cell.active:after{
  content: '';
  background: #59D280;
  display: block;
  height: 10rpx;
  position: absolute;
  left: 30rpx;
  right: 20rpx;
  bottom: 45rpx;
  transform: translateY(-11rpx);
  z-index: 0;
}
.table-line{
  width: 60rpx;
  height: 6rpx;
  background-color: #e64340;
  position: absolute;
  bottom: 0rpx;
  box-sizing: border-box;
}

