page{
  padding-bottom: 30rpx;
}
/*
顶部索引
*/
.nav{
  display: flex;
  align-items: center;
  background: white;
}
.nav_home{
  display: flex;
  align-items: center;
}
.nav_home_text{
  margin-left: 35rpx;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #949494;
  padding: 30rpx 0;
}
.nav_home_img{
  margin-left: 20rpx;
  width: 11rpx;
  height: 15rpx;
}
.nav_detail{
  margin-left: 20rpx;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #35AF5C;
}
/*解读  */
.reading{
  margin-top: 0rpx;
  margin-left: 0rpx;
  margin-right: 0rpx;
  /* background: white; */
  border-radius: 0rpx;
  padding-top: 50rpx;
  padding-bottom: 0rpx;
}
.reading_title{
  margin-left: 30rpx;
  letter-spacing: 0;
  line-height: 30rpx;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #313131;  
  font-weight: bold;
}
.reading_content{
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding: 50rpx;
  margin-top: 30rpx;
  background: white;
  letter-spacing: 0;
  text-shadow: 0 3px 15px rgba(153,153,153,0.20);

  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #313131;
  line-height: 50rpx;
}

.pptList{
  margin-top: 0rpx;
  margin-left: 0rpx;
  margin-right: 30rpx;
  /* background: white; */
  border-radius: 10rpx;
  overflow: visible;

}
.pptTitle{
  display: flex;
  margin-left:0rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: #222222;
  letter-spacing: 0;
  line-height: 30rpx;
  padding-top: 50rpx;
  padding-bottom: 10rpx; 
}
.pptTitle_num{
  font-family: PingFangSC-Semibold;
  font-size: 26rpx;
  color: #949494;
}
.overFlow{
  overflow: visible;
}
.pptItem{
  
  border-radius: 0rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
  box-shadow: 0 15px 20px 0 rgba(0,0,0,0.05);
  position: relative;
  background: #f9f9f9;
}
.pptItem_img{
  /* margin-left: 40rpx;
  margin-top: 30rpx; */
  height: 400rpx;
  width: 693rpx;
  background: lightgray;
  border-top-left-radius: 0rpx;
  border-top-right-radius: 0rpx;
}
.pptItem_markForVideo{
  width: 157rpx;
  height: 157rpx;
  position: absolute;
  left: 272rpx;
  top: 122rpx;
}
.pptItem_control{
  display: flex;
  align-items: center;
  /* height: 100rpx; */
  padding-bottom: 10rpx;
}
.pptItem_line{
  margin-top: 0rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 1rpx;
  background: #EEEEEE;
}
.pptItem_control_playImg{
  margin-left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: blueviolet;
}
.pptItem_pageNumber{

  text-align: center;
  letter-spacing: 0;
  line-height: 20rpx;
  padding: 30rpx;
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  color: #949494;
}
/*
音频播放器
*/
.playItem{
  display: flex;
  align-items: center;
  margin: 30rpx 40rpx;
  flex: 1;
}
.btn{
  width: 60rpx;
  height: 60rpx;
}
.btn.selected{
  color: red;
}

.progressBg{
  /* height: 6rpx; */
  height: 34rpx;
  /* background:  #EEEEEE; */
  margin-left: 30rpx;
  flex: 1;
  position: relative;
}
.progress{
  height: 34rpx;
  background: rgba(53,175,92,0.70);
}
.progressImgBG{
  width: 100%;
  height: 34rpx;
  margin: 0rpx;
  position: absolute;
  right: 0rpx;
}
.progressImg{
  height: 34rpx;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0rpx;
}
.time{
  width: 90rpx;
  text-align: right;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #949494;
  letter-spacing: 0;
  line-height: 24rpx;
}

/*参与分享  */
.joinShare{
  margin-top: 30rpx;
}
.joinShare_title{
  margin-top: 20rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: gray;
}
.joinShare_content{
  display: flex;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  justify-content: center;
  align-items: center;
  background: white;
  border-radius: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.joinShare_content_img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: blueviolet;
}
.joinShare_content_text{
  margin-left: 20rpx;
  font-size: 30rpx;
}

