.share{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  width: 670rpx;
  height: 442rpx;
  border-radius: 10rpx;
}
.share_title{
  margin-top: 50rpx;
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
}
.share_number{
  margin-top: 30rpx;
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  color: #555555;
  letter-spacing: 0;
  line-height: 26rpx;
  text-align: center;
}
.share_sharedNumber{
  margin-top: 70rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
