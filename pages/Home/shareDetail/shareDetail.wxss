  background: #35AF5C;
  border-radius: 10px;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 40rpx;
  text-align: center;
}
.backToHome{
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 50rpx;
}
.backToHome_img{
  height: 36rpx;
  width: 36rpx;
  border-radius: 50%;
}
.backToHome_text{
  color: #35AF5C;
  margin-left: 10rpx;
  font-size: 32rpx;
  text-align: center;
}