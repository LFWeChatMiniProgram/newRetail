/* pages/component/seriesLesson/seriesLesson.wxss */
/*
系列课
*/
.list{
  padding-top: 0rpx;
  padding-bottom: 20rpx;
  overflow: visible;
}
.series_item{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-bottom: 30rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 10px 15px 0 rgba(0,0,0,0.05);
}
.series_item_imgBG{
  width: 200rpx;
  height: 230rpx;
}
.series_item_img{
  margin-left: 30rpx;
  margin-top: 30rpx;
  width: 200rpx;
  height: 200rpx;
}
.series_item_content{
  margin-left: 54rpx;
  display: flex;
  flex-direction: column;
}
.series_item_title{
  margin-top: 30rpx;
  margin-right: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 40rpx;
}
.series_item_des{
  margin-top: 32rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #888888;
  letter-spacing: 0;
  line-height: 26rpx;
}
.series_item_info{
  display: flex;
  align-items: center; 
  margin-top: 30rpx;
  font-size: 30rpx;
  color: gray;
  flex: 1;
}
.series_item_price{
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #F0601E;
  letter-spacing: 0;
  line-height: 32rpx;
  flex: 1;
}
.series_item_person{
  display: flex;
  margin-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #888888;
  letter-spacing: 0;
  line-height: 26rpx;
}
.series_item_line{
  margin-left: 20rpx;
  width: 2rpx;
  height: 24rpx;
  background: #888888;
  
}
.series_item_job{
  margin-left: 20rpx;
  margin-right: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  width: 170rpx;
  color: #888888;
  letter-spacing: 0;
  line-height: 30rpx;

  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}